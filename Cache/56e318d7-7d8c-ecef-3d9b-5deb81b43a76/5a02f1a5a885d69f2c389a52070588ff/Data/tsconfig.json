{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "noEmit": true,
    "paths": {
      "*": [
        "./*",
        "../Packages/*",
        "../Cache/TypeScript/Src/Packages/*"
      ]
    },
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2021",
    "types": []
  },
  "exclude": [
    "node_modules/typescript/lib/lib.dom.d.ts"
  ],
  "include": [
    "./**/*.ts",
    "../Packages/**/*.ts",
    "../Cache/TypeScript/Src/Packages/**/*.ts",
    "../Cache/TypeScript/lib/LensifyTS/Declarations/**/*.d.ts"
  ]
}