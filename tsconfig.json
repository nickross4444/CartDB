{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "noEmit": true,
    "paths": {
      "*": [
        "./Assets/*",
        "./Packages/*",
        "./Cache/TypeScript/Src/Packages/*"
      ]
    },
    "skipDefaultLibCheck": true,
    "target": "es2021",
    "types": []
  },
  "exclude": [
    "node_modules/typescript/lib/lib.dom.d.ts"
  ],
  "include": [
    "./Cache/TypeScript/lib/LensifyTS/Declarations/**/*.d.ts",
    "./Assets/**/*.ts",
    "./Packages/**/*.ts",
    "./Cache/TypeScript/Src/Packages/**/*.ts"
  ]
}